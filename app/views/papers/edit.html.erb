<h1>Editing paper</h1>
<%= error_messages_for :paper %>
<% form_for(@paper) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>
    <p>
    <b>Picture</b><br />
    <%= f.text_field :picture %>
  </p>
  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <b>Admin?</b><br />
    <%= f.check_box :admin %>
  </p>
  <p>
    <b>Category</b><br />
    <%= f.text_field :category %>
  </p>
  <p>
    <b>Language</b><br />
    <%= f.text_field :language %>
  </p>
  <p>
    <b>Author's name </b><br />
    <%= f.text_field :author_name %>
  </p>
  <p>
    <b>Author's email </b><br />
    <%= f.text_field :author_email %>
  </p>
  <p>
    <b>Author's organisation </b><br />
    <%= f.text_field :author_organisation %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>
<%= link_to 'Show', @paper %> |
<%= link_to 'Back', papers_path %>
