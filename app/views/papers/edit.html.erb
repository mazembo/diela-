<h1>Editing paper</h1>

<%= error_messages_for :paper %>

<% form_for(@paper) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Author</b><br />
    <%= f.text_field :author %>
  </p>

  <p>
    <b>Picture</b><br />
    <%= f.text_field :picture %>
  </p>

<p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>
  <p>

  
  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <b>Admin?</b><br />
    <%= f.check_box :admin %>
  </p>
  
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @paper %> |
<%= link_to 'Back', papers_path %>
